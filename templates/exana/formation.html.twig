{% extends 'base.html.twig' %}
{% block title %}Formations Exsana {% endblock %}

{% block body %}

<div class="container">
		<div class="row">
			<div class="col-md-8 obj-formation">
				<div class="title_formation">
					<h1>{{ formation.title}}</h1>
				</div>
				<div class="custom_title">
					<h2>Objectifs de la formation</h2>
				</div>
				<ul>
					<li>{{ formation.objectifFormation[0]  }}</li>
					<li>{{ formation.objectifFormation[1]  }}</li>
					<li>{{ formation.objectifFormation[2] }}</li>
				</ul>
			</div>
		</div>
	</div>
<div class="container programme-formation">
		<div class="row">
			<div class="col-md-12 formation-programme" name"programmeBody">
				<div class="custom_title">
					<h2>Programme pédagogique</h2>
				</div>
				<ul id="formation">
					<li>{{ formation.programmeFormmation[0] }}</li>
					<li>{{ formation.programmeFormmation[1] }}</li>
					<li>{{ formation.programmeFormmation[2] }}</li>
					<li>{{ formation.programmeFormmation[3] }}</li>
					<li>{{ formation.programmeFormmation[4] }}</li>
					<li>{{ formation.programmeFormmation[5] }}</li>
				</ul>
			</div>
		</div>		
</div>
<div class="container">
	<div class="row mb-2">
		<div class="col-md-6">
			<div class="card flex-md-row mb-4 box-shadow h-md-250">
				<div class="card-body d-flex flex-column align-items-start">
					<div class="custom_title"><h5 class="mb-0">PRÉREQUIS</h5></div>
						<ul>
							<li>{{ formation.prerequisite }}</li>
						</ul>
				</div>
			</div>
		</div>
		<div class="col-md-6">
			<div class="card flex-md-row mb-4 box-shadow h-md-250">
				<div class="card-body d-flex flex-column align-items-start">
						<div class="custom_title"><h5 class="mb-0">LIEUX</h5></div>
					<ul>
						<li> {{ formation.location }}</li>
					</ul>
				</div>
			</div>
		</div>
	</div>
	<div class="row mb-2">
		<div class="col-md-6">
			<div class="card flex-md-row mb-4 box-shadow h-md-250">
				<div class="card-body d-flex flex-column align-items-start">
					<div class="custom_title"><h5 class="mb-0">DURÉE</h5></div>
						<ul>
							<li>{{ formation.durationFormation}} jours</li>
						</ul>
				</div>
			</div>
		</div>
		<div class="col-md-6">
			<div class="card flex-md-row mb-4 box-shadow h-md-250">
				<div class="card-body d-flex flex-column align-items-start">
						<div class="custom_title"><h5 class="mb-0">PRIX</h5></div>
					<ul>
						<li> {{ formation.price}}€</li>
					</ul>
				</div>
			</div>
		</div>
	</div>
</div>

{% endblock %}