{% extends 'base.html.twig' %}

{% block title %}Hello ExanaHomeController!{% endblock %}

{% block body %}

<div class="container">
	<div class="py-5 text-center">
			<h2>formations</h2>
			<p class="lead">Liste de formations proposée par exsana</p>
	</div>
	<div class="row">
	<br><br>
		<div class="col-md-3 order-md-2 mb-4">
			<h4 class="d-flex justify-content-between align-items-center mb-3">
				<span class="title-category">Recherche</span>
			</h4>
			{% include 'formation/_filter.html.twig' with {form: form} only %}	
        </div>
	
		<div class="col-md-9 order-md-1 mb-8">
			<section class="listFormations">
				{% for formation in formations %}
				<div class="formation-item col-md-12>">
						<div class="img-list-formation">
							<img src="{{ '/img/logoFormation.jpg' }}" width="90px" alt="title" class="lazyloaded" data-ll-status="loaded">
						</div>
					<a class="full-link" href="{{ path('formation', {id: formation.id}) }}">
					<div class ="article-extract-title"><h3>{{ formation.title }}</h3></div>
					<div class ="formation-duration">DURÉE : {{ formation.durationFormation }}	 jours</div>
					</a>
				</div>
				{% endfor %}
			</section>
		<div class="pagination">
		</div>
	</div>
</div>
{% endblock	%}