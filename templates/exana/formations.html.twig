{% extends 'base.html.twig' %}

{% block title %}Hello ExanaHomeController!{% endblock %}

{% block body %}

<div class="container">
	<div class="row">
		<div class"col-md-4 order-md-2 mb-4">
		<h3> Catégories </h3>
		<ul>
		{% for categories in category %}
			<li><a class='full-link'> {{categories.title}}</li>
		{% endfor %}
		</ul>
		</div>
		<div class="col-md-8 order-md-1">
			<section class="listFormations">
				{% for formation in formations %}
				<div class="formation-item col-md-12>">
						<div class="img-list-formation">
							<img src="{{ asset('img/logoFormation.jpg') }}" width="90px" alt="title" class="lazyloaded" data-ll-status="loaded">
						</div>
					<a class="full-link" href="{{ path('formation', {id: formation.id}) }}">
					<div class ="article-extract-title"><h3>{{ formation.title }}</h3></div>
					<div class ="formation-duration">DURÉE : {{ formation.durationFormation }}	 jours</div>
					</a>
				</div>
				{% endfor %}
	
			</section>
	</div>
</div>
{% endblock	%}