    <body>

<header class="header">
    <nav class="navbar navbar-expand-lg fixed-top py-4">
        <a href="{{ path('exana_home')}}" class="navbar-brand text-uppercase font-weight-bold"><img src="{{ asset('img/LOGOS-EXSANA-3.png')}}" alt="img-linkedin" class="img-fluid" id="img-header" alt="Responsive image" ></a>
            <button type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation" class="navbar-toggler navbar-toggler-right"><i class="fa fa-bars"></i></button>
            <div id="navbarSupportedContent" class="collapse navbar-collapse col-md-7">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item active"><a href="{{ path('formations') }}" class="nav-link text-uppercase font-weight-bold">FORMATION<span class="sr-only">(current)</span></a></li>
                    <li class="nav-item"><a href="{{ path('whereweare') }}" class="nav-link text-uppercase font-weight-bold">INFOS PRATIQUES</a></li>
                    <li class="nav-item"><a href="{{ path('whoweare') }}" class="nav-link text-uppercase font-weight-bold">EXSENA</a></li>
                    <li class="nav-item"><a href="{{ path('contact') }}" class="nav-link text-uppercase font-weight-bold">CONTACT</a></li>
                    <li class="nav-item"><a href="{{ path('login') }}" class="nav-link text-uppercase font-weight-bold">ESPACE PRO</a></li>
                    {% if app.user %}
                    <li class="nav-item"><a href="{{ path('logout') }}" class="nav-link nav-link text-uppercase font-weight-bold">Logout</a></li>
                    <li class="nav-item"><a href="{{ path('admin_admin_gestion') }}" class="nav-link nav-link text-uppercase font-weight-bold">Gestion</a></li>
                    {% endif %}
                </ul>
            </div>
    </nav>

</header>
    <div class="bodyCore">
{% block body %}{% endblock %}
    </div>

<footer>
 <div class="container-fluid pb-3 mb-0 justify-content-center text-light">    
         <div class="row my-5 justify-content-center py-5">
             <div class="col-11">
                 <div class="row">
                     <div class="col-xl-4 col-md-4 col-sm-4 col-12">
                         <img src="{{ asset('img/LOGOS-EXSANA-3.png')}}" alt="img-linkedin" class="img-fluid" width="50%" id="" alt="Responsive image">
                     </div>
                     <div class="col-xl-4 col-md-4 col-sm-4 col-15">
                         <ul class="list-footer">
                            <h6 class="mb-3 mb-lg-4 bold-text"><b>MENU</b></h6>
                             <li><a href="{{ path('exana_home') }}">Acceuil</a></li>
                             <li><a href="{{ path('formations') }}">Formations</a></li>
                             <li><a href="{{ path('whereweare') }}">Infos pratiques</a></li>
                             <li><a href="{{ path('whoweare') }}">Exsana</a></li>                             
                             <li><a href="{{ path('contact') }}">Contact</a></li>
                         </ul>
                     </div>
                     <div class="col-xl-4 col-md-4 col-sm-4 col-12">
                        <h6 class="mb-3 mb-lg-4 bold-text">SUIVEZ-NOUS</h6>
                        <ul class="social-network social-circle">
                            <li><a href="#" class="icoFacebook" title="Facebook"><i class="fa fa-facebook"></i></a></li>
                            <li><a href="#" class="icoLinkedin" title="Linkedin"><i class="fa fa-linkedin"></i></a></li>
                            <li><a href="#" class="icoInstagram" title="Instagram"><i class="fa fa-instagram"></i></a></li>
                        </ul>
                 <div class="row ">
                     <div class="col-xl-2 col-md-4 col-sm-4 col-auto order-2 align-self-end mt-3 ">
                         <h6 class="text-muted bold-text"><b>Marc antoine Baron</b></h6><small><span><i class="fa fa-envelope" aria-hidden="true"></i></span> Marco@gmail.com</small>
                     </div>
                 </div>
             </div>
         </div>
    </div>
</div>
</div>
</footer>
