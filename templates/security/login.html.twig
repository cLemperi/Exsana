                                    </div>

                                    <div class="form-group">
                                        <label for="password"> Mot de passe</label>
                                        <input type="password" id="password" id="password" name="_password" class="form-control" required autocomplete="current-password">
                                    </div>
                                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
