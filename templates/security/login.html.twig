{% extends 'base.html.twig' %}

{% block title %}Se connecter - Exsana{% endblock %}

{% block meta %}
    <meta name="robots" content="noindex">
{% endblock %}

{% block body %}
    <div id="conteneur_bg_gris_left">
        <div class="breadcrumb">
                <span class="breadcrumb_last">Inscription / Connexion</span>
        </div>
        <div class="row featurette">
                <div class="col-md-6">
                    <div class="cadre_acces_compte connexion">
                        {% if error %}
