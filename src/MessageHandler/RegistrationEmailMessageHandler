<?php

namespace App\MessageHandler;

use Symfony\Component\Mime\Email;
use Symfony\Component\Mime\Address;
use Doctrine\ORM\EntityManagerInterface;
use App\Message\RegistrationEmailMessage;
use Symfony\Component\Mailer\MailerInterface;
use Symfony\Component\Messenger\Attribute\AsMessageHandler;

#[AsMessageHandler]
class RegistrationEmailMessageHandler
{
    private $mailer;

    public function __construct(MailerInterface $mailer)
    {
        $this->mailer = $mailer;
    }

    public function __invoke(RegistrationEmailMessage $message)
    {
        $email = (new Email())
            ->from(new Address('exsanaformation@exsanaformation.fr'))
            ->to(new Address($message->getUserEmail()))
            ->subject('Inscription Ã  Exsana rÃ©ussie')
            ->html(/* ... comme avant ... */);

        $this->mailer->send($email);
    }
}
